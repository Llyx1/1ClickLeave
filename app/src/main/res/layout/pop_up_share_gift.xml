<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minHeight="300dp"
    android:minWidth="200dp"
    android:padding="5dp"
    android:layout_gravity="center"
    android:gravity="center_horizontal"
    android:background="@color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="16sp"
        android:layout_margin="10dp"
        android:text="THANK YOU ! "
        android:fontFamily="@font/notosans_bold"
        android:textColor="@color/green_text"/>

    <TextView
        android:id="@+id/thank_you_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="12sp"
        android:layout_margin="10dp"
        android:gravity="center"
        android:fontFamily="@font/notosans_regular"
        android:textColor="@color/dark"/>

    <ImageView
        android:id="@+id/gift_picture"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:src="@mipmap/gift" />

    <TextView
        android:id="@+id/gift_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="12sp"
        android:layout_margin="10dp"
        android:fontFamily="@font/notosans_regular"
        android:textColor="@color/midtone"/>

    <RelativeLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@id/gift_tips"
            android:layout_alignLeft="@id/gift_tips"
            android:layout_alignRight="@id/gift_tips"
            android:layout_alignTop="@id/gift_tips"
            android:scaleType="fitXY"
            android:src="@mipmap/tips"/>

        <TextView
            android:id="@+id/gift_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="200dp"
            android:textSize="12sp"
            android:layout_margin="10dp"
            android:paddingBottom="15dp"
            android:paddingTop="40dp"
            android:paddingRight="40dp"
            android:paddingLeft="40dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="@font/notosans_regular"/>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/return_hp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="CLOSE"
            android:textSize="12sp"
            android:layout_margin="10dp"
            android:fontFamily="@font/notosans_bold"
            android:background="@drawable/button_shape"/>
        <Button
            android:id="@+id/share_gg_plus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="SHARE"
            android:textSize="12sp"
            android:fontFamily="@font/notosans_bold"
            android:layout_margin="10dp"
            android:background="@drawable/button_shape"/>
    </LinearLayout>

</LinearLayout>